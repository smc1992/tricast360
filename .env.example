# Coolify Environment Variables (Nixpacks)
# Copy this file to .env and fill in your actual values

# Site Configuration
SITE_URL=https://tricast360.de
NODE_ENV=production

# Coolify Webhook URL for deployment
# Get this from your Coolify dashboard -> Application -> Webhooks
COOLIFY_WEBHOOK_URL=https://your-coolify-instance.com/api/v1/webhooks/your-webhook-id

# Optional: Custom domain settings
CUSTOM_DOMAIN=tricast360.de

# Optional: SSL/TLS settings (handled by Coolify)
SSL_ENABLED=true

# Optional: Analytics and tracking
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# GOOGLE_VERIFICATION_CODE=your-google-verification-code

# Optional: Social media handles
TWITTER_HANDLE=@treecast360
LINKEDIN_COMPANY=treecast360

# Optional: Contact information
CONTACT_EMAIL=info@tricast360.de
SUPPORT_EMAIL=support@tricast360.de

# Optional: Feature flags
ENABLE_ANALYTICS=true
ENABLE_CONTACT_FORM=true

# Optional: Performance settings
CACHE_MAX_AGE=3600
STATIC_CACHE_MAX_AGE=31536000